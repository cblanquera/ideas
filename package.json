{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn build:idea && build:examples",
    "build:idea": "yarn build:idea:spec && yarn build:idea:validators && yarn build:idea:typescript && yarn build:idea:drizzle && yarn build:idea:next && yarn build:idea:express",
    "build:idea:spec": "yarn --cwd packages/idea-spec build",
    "build:idea:validators": "yarn --cwd packages/idea-validators build",
    "build:idea:typescript": "yarn --cwd packages/idea-typescript build",
    "build:idea:drizzle": "yarn --cwd packages/idea-drizzle build",
    "build:idea:next": "yarn --cwd packages/idea-next build",
    "build:idea:express": "yarn --cwd packages/idea-express build",
    "build:examples": "yarn build:example:express && yarn build:example:next",
    "build:examples:express": "yarn --cwd examples/with-express build",
    "build:examples:next": "yarn --cwd examples/with-next build",
    "test:idea": "yarn test:idea:spec && yarn test:idea:validators && yarn test:idea:typescript && yarn test:idea:drizzle && yarn test:idea:next && yarn test:idea:express",
    "test:idea:spec": "yarn --cwd packages/idea-spec test",
    "test:idea:validators": "yarn --cwd packages/idea-validators test",
    "test:idea:typescript": "yarn --cwd packages/idea-typescript test",
    "test:idea:drizzle": "yarn --cwd packages/idea-drizzle test",
    "test:idea:express": "yarn --cwd packages/idea-express test",
    "test:idea:next": "yarn --cwd packages/idea-next test",
    "transform:express": "yarn --cwd examples/with-express transform",
    "transform:next": "yarn --cwd examples/with-next transform"
  },
  "devDependencies": {
    "concurrently": "7.6.0"
  }
}